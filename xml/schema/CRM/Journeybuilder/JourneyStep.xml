<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Journeybuilder</base>
  <class>JourneyStep</class>
  <name>civicrm_journey_steps</name>
  <comment>Journey Step</comment>
  <log>false</log>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique JourneyStep ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>journey_id</name>
    <type>int unsigned</type>
    <title>Journey</title>
    <comment>FK to journey</comment>
  </field>
  <foreignKey>
    <name>journey_id</name>
    <table>civicrm_journey_campaigns</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>step_type</name>
    <type>varchar</type>
    <title>Step Type</title>
    <type>enum</type>
    <comment>step type</comment>
    <pseudoconstant>
      <callback>CRM_Journeybuilder_BAO_JourneyStep::stepsType</callback>
    </pseudoconstant>
    <add>1.0</add>
    <html>
      <type>Select</type>
    </html>
  </field>
  <field>
    <name>name</name>
    <title>Step Name</title>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <export>true</export>
    <import>true</import>
    <add>1.0</add>
    <html>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>configuration</name>
    <title>Configuration</title>
    <type>longtext</type>
    <comment>Configuration.</comment>
    <html>
      <type>TextArea</type>
      <rows>4</rows>
      <cols>60</cols>
    </html>
    <import>true</import>
    <add>1.0</add>
  </field>
  <field>
    <name>position_x</name>
    <type>decimal</type>
    <default>0</default>
    <import>true</import>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <comment>position x</comment>
    <html>
      <type>Number</type>
      <label>Position X</label>
    </html>
  </field>
  <field>
    <name>position_y</name>
    <type>decimal</type>
    <default>0</default>
    <import>true</import>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <comment>Position Y</comment>
    <html>
      <type>Number</type>
      <label>Position Y</label>
    </html>
  </field>
  <field>
    <name>sort_order</name>
    <type>int unsigned</type>
    <comment>Sort Order</comment>
    <html>
      <type>Number</type>
      <label>Sort Order</label>
    </html>
  </field>
  <index>
    <name>idx_step_type</name>
    <fieldName>step_type</fieldName>
  </index>
</table>
